        <div id="flash_msg">submit successfully!!!</div>
        <section>
            <form class="form-inline" role="form">
                <div class="input-group" id="email_input">
                    <div id="email_sign" class="input-group-addon">@</div>
                    <input type="email" class="form-control" required placeholder="Please leave an email address so we can send you a notification when job's done">
                    <span class="input-indicator"></span>
